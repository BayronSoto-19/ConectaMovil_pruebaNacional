<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.Crud">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crud Usuario"
                android:textSize="34sp" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextBuscar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Buscar..." />

                <Button
                    android:id="@+id/btnBuscar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buscar" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextIdCrud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Id" />
                <EditText
                    android:id="@+id/editTextNombreCrud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre" />

                <EditText
                    android:id="@+id/editTextEdadCrud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Edad" />

                <EditText
                    android:id="@+id/editTextCorreoCrud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo" />

                <EditText
                    android:id="@+id/editTextContra4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="Contraseña" />

                <Button
                    android:id="@+id/btnAgregarUsuario"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Agregar Usuario" />

                <Button
                    android:id="@+id/btnModificarUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Modificar" />

                <ListView
                    android:id="@+id/Lista_crud_Usuario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnvolver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="volver" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Puedes agregar otros elementos de tu interfaz de usuario aquí -->

</androidx.constraintlayout.widget.ConstraintLayout>
